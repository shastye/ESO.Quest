<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_view_item_main"
        android:layout_width="@dimen/item_main_image_length"
        android:layout_height="@dimen/item_main_image_length"
        android:layout_margin="8dp"
        android:contentDescription="@string/image_view_item_main_content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text_view_item_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/image_view_item_main"
        app:layout_constraintStart_toStartOf="@id/image_view_item_main"
        app:layout_constraintTop_toBottomOf="@id/image_view_item_main"
        tools:text="This is item # xx" />
</androidx.constraintlayout.widget.ConstraintLayout>